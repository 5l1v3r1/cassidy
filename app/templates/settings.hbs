<form action="">
  <div class="form-group">
    <label for="">Options</label>
    <div class="toggle">
      <input type="checkbox" name="lower" id="lower" {{checked lower}}>
      <label for="lower">a-z</label>
    </div>

    <div class="toggle">
      <input type="checkbox" name="upper" id="upper" {{checked upper}}>
      <label for="upper">A-Z</label>
    </div>

    <div class="toggle">
      <input type="checkbox" name="numbers" id="numbers" {{checked numbers}}>
      <label for="numbers">0-9</label>
    </div>

    <div class="toggle">
      <input type="checkbox" name="symbols" id="symbols" {{checked symbols}}>
      <label for="symbols">-\%</label>
    </div>
  </div>

  <div class="form-group">
    <label for="length">Length</label>
    <input type="number" name="length" id="length" class="form-control" value="{{length}}">
  </div>

  <div class="form-group">
    <label for="key">Key</label>
    <input type="text" name="key" id="key" class="form-control" value="{{key}}">
    <small class="help-block">
      Your key is unique to you. You'll need it to generate the same passwords.
    </small>
  </div>
</form>

<div class="placeholder-passphrase"></div>

<div class="danger-zone">
  <a href="#" class="btn btn-link reset-settings">Reset</a><br>
  <a href="#" class="btn btn-link btn-link-danger clear-data">Clear all data</a>
</div>
