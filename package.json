{
  "name": "cassidy",
  "version": "3.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/nicinabox/cassidy.git"
  },
  "scripts": {
    "test": "jest",
    "start": "npm run build:js:watch & npm run build:css:watch & npm run serve",
    "serve": "node server.js",
    "build:css": "gulp styles",
    "build:css:watch": "gulp watch",
    "build": "npm run build:css && npm run webpack",
    "build:js": "webpack -d --cacheDirectory=true",
    "build:js:watch": "npm run build:js -- -w"
  },
  "author": "nicinabox",
  "license": "MIT",
  "dependencies": {
    "crypto-js": "^3.1.4",
    "fastclick": "^1.0.6",
    "flux": "^2.0.1",
    "jquery": "^2.1.3",
    "lodash": "^3.7.0",
    "react": "^0.13.1",
    "react-router": "^0.13",
    "vault": "^0.3.0"
  },
  "devDependencies": {
    "babel": "^4.7.8",
    "babel-core": "^4.7.8",
    "babel-loader": "^4.1.0",
    "connect": "^3.3.5",
    "esprima-fb": "^14001.1.0-dev-harmony-fb",
    "gulp": "^3.8.11",
    "gulp-sass": "^1.3.3",
    "jest-cli": "^0.4.0",
    "jscs": "jscs-dev/node-jscs#master",
    "jsx-loader": "^0.12.2",
    "node-sass": "^3.0",
    "sass-loader": "^0.4.2",
    "serve-static": "^1.9.2",
    "webpack": "^1.7.2"
  },
  "jshintConfig": {
    "strict": false,
    "esnext": true
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "unmockedModulePathPatterns": [
      "__tests__/helpers",
      "react",
      "lodash",
      "crypto-js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/helpers/"
    ],
    "testFileExtensions": [
      "js"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "setupEnvScriptFile": "./localStorage.js",
    "globals": {
      "Dropbox": true
    }
  }
}
